    <style name="Theme.Groww" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Groww.Splash" parent="Theme.SplashScreen">
